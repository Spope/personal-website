<section id="contact">
    <div class="pad">
        <h1>Contact</h1>
        <div id="contact-form">
            <div id="pad">
                
                <form id="form-contact" method="post" action="{{ app.url_generator.generate('post_contact') }}" {% if contacted %} class="hidden" {% endif %}>
                    <input type="text" id="input-name" name="name" placeholder="Nom" />
                    <input type="email" id="input-email" name="email" placeholder="E-mail" />
                    <textarea name="message" id="input-message" placeholder="Message"></textarea>
                    <button type="submit">Envoyer</button>
                </form>
                <div id="thanks" {% if contacted == false %} class="hidden" {% endif %}>
                    <h3>Merci !</h3>
                </div>
            </div>
        </div>
    </div>

</section>
